{% extends 'layout.html.twig' %}

{% block title %} Procost - Modifications Profil {% endblock %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Edition de mon profil</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path("panel_home") }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path("employe") }}">Employés</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path("profil") }}">Mon profil</a>
                </li>
                <li class="breadcrumb-item">Edition de mon profil</li>
            </ul>
        </div>
        <div class="tile">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <section>
                    <h3>Informations générales</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                <label class="control-label col-md-3">Prénom</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                    <div class="form-control-feedback text-danger">{{ form_errors(form.prenom) }}</div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Nom</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                    <div class="form-control-feedback text-danger">{{ form_errors(form.nom) }}</div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Email</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
                                    <div class="form-control-feedback text-danger">{{ form_errors(form.email) }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <hr/>
                <div class="row">
                    <div class="btn-group btn-group-lg offset-md-6 col-md-6" role="group">
                        <a href="{{ path("employe") }}" class="btn btn-danger"><i class="fa fa-save"></i>Annuler</a>
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}
