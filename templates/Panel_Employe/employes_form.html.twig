{% extends 'layout.html.twig' %}

{% block title %} Procost - Ajouts Employés {% endblock %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Ajout d'un employé</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path("panel_home") }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path("employe") }}">Employés</a>
                </li>
                <li class="breadcrumb-item">Edition d'un employé</li>
            </ul>
        </div>
        <div class="tile">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <section>
                    <h3>Informations générales</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                <label class="control-label col-md-3">Prénom</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.prenom) }}</div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Nom</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.nom) }}</div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Image :</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.url_img, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.url_img) }}</div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Email</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.email) }}</div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Mot de passe :</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}, 'type': 'password'}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.password) }}</div>
                            </div>
                        </div>
                    </div>
                </section>
                <hr/>
                <section>
                    <h3>Production</h3>
                    <div class="row mt-4">
                        <div class="offset-md-4 col-md-8">
                            <div class="form-group row">
                                <label for="select-job" class="control-label col-md-3">Métier</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.metier, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.metier) }}</div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Coût horaire (en €)</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.cout_horaire, {'attr': {'class': 'form-control'}, 'type': 'number'}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.cout_horaire) }}</div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-md-3">Date d'embauche</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.date_embauche, {'attr': {'class': 'form-control'}, 'type': 'date'}) }}
                                </div>
                                <div class="form-control-feedback text-danger">{{ form_errors(form.date_embauche) }}</div>
                            </div>
                        </div>
                    </div>
                </section>
                <hr/>
                <div class="row">
                    <div class="offset-md-6 col-md-6">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}
