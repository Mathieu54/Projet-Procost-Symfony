{% extends 'layout.html.twig' %}

{% block title %} Procost - Employé  {% endblock %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Profil de {{ employe.prenom }} {{ employe.nom }}</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path("panel_home") }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path("employe") }}">Employés</a>
                </li>
                <li class="breadcrumb-item">{{ employe.prenom }} {{ employe.nom }}</li>
            </ul>
        </div>
        {% for messageprod_ajout_employe in app.flashes('success_ajout_prod_employe') %}
            <div class="alert alert-dismissible alert-success my-4">
                <button class="close" type="button" data-dismiss="alert">×</button><strong>{{messageprod_ajout_employe}}</strong>
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-4">
                <div class="tile">
                    <table class="table table-striped table-bordered table-sm">
                        <tbody>
                        <tr>
                            <th>Prénom</td>
                            <td>{{ employe.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Nom</td>
                            <td>{{ employe.nom }}</td>
                        </tr>
                        <tr>
                            <th>Email</td>
                            <td>{{ employe.email }}</td>
                        </tr>
                        <tr>
                            <th>Image</td>
                            <td><img height="50px" width="50px" alt="Photo Employé" src="{{ asset(employe.urlimg)}}"></td>
                        </tr>
                        <tr>
                            <th>Métier</td>
                            <td>{{ employe.metier.libelle }}</td>
                        </tr>
                        <tr>
                            <th>Coût horaire</td>
                            <td>{{ employe.couthoraire }} €</td>
                        </tr>
                        <tr>
                            <th>Date d'embauche</td>
                            <td>{{ employe.dateembauche|date('Y/m/d')}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tile">
                    <h3 class="title-title mb-4">Ajouter un temps</h3>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Projet concerné</label>
                            <div class="col-md-6">
                                <select class="form-control" id="select-projects">
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="days-count" class="control-label col-md-6">Nombre d'heures'</label>
                            <div class="col-md-6">
                                {{ form_widget(form.time_production, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-control-feedback text-danger">{{ form_errors(form.time_production) }}</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-6 col-md-8">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                </div>
            </div>
            <div class="col-md-8">
                <div class="tile pb-5">
                    <h3 class="tile-title">Historique des temps de production</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm">
                            <thead>
                            <tr>
                                <th>Projet</th>
                                <th>Temps</th>
                                <th>Date de saisie</th>
                                <th>Coût total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for prod_profil in production_profil %}
                                <tr>
                                    <td>{{ prod_profil.nom_projet }}</td>
                                    <td>{{ prod_profil.time_production }} heures</td>
                                    <td>{{ prod_profil.date_ajout}}</td>
                                    <td>{{ prod_profil.cout_total }} €</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!--<hr/>
                    <nav class="float-right">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;</span>
                            </li>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">1<span class="sr-only">(current)</span></span>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a></li>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">&raquo;</a>
                            </li>
                        </ul>
                    </nav>-->
                </div>
            </div>
        </div>
    </main>

{% endblock %}
