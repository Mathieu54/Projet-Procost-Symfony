{% extends 'layout.html.twig' %}

{% block title %} Procost - Modifications Employés {% endblock %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Mon profil</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path("panel_home") }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path("employe") }}">Employés</a>
                </li>
                <li class="breadcrumb-item">Mon profil</li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="tile">
                    <table class="table table-striped table-bordered table-sm">
                        <tbody>
                        <tr>
                            <th>Prénom</td>
                            <td>{{app.user.prenom}}</td>
                        </tr>
                        <tr>
                            <th>Nom</td>
                            <td>{{app.user.nom}}</td>
                        </tr>
                        <tr>
                            <th>Email</td>
                            <td>{{app.user.email}}</td>
                        </tr>
                        <tr>
                            <th>Métier</td>
                            <td>{{app.user.metier.libelle}}</td>
                        </tr>
                        <tr>
                            <th>Coût horaire</td>
                            <td>{{app.user.couthoraire}} €</td>
                        </tr>
                        <tr>
                            <th>Date d'embauche</td>
                            <td>{{app.user.dateembauche|date('d/m/Y')}}</td>
                        </tr>
                        </tbody>
                    </table>
                    <a href="{{path("profil_modif")}}" class="btn btn-info">
                        <i class="fa fa-pencil"></i>Modifier
                    </a>
                </div>
                <div class="tile">
                    <h3 class="title-title mb-4">Ajouter un temps</h3>
                    <form class="form-horizontal">
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Projet concerné</label>
                            <div class="col-md-6">
                                <select class="form-control" id="select-projects">
                                    {% for non_livre in projet_non_livre %}
                                    <option>{{ non_livre.nom }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="days-count" class="control-label col-md-6">Nombre d'heures'</label>
                            <div class="col-md-6">
                                <input id="days-count" class="form-control" type="number" min="1">
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-6 col-md-8">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tile pb-5">
                    <h3 class="tile-title">Historique des temps de production</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm">
                            <thead>
                            <tr>
                                <th>Projet</th>
                                <th>Temps</th>
                                <th>Date de saisie</th>
                                <th>Coût total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for prod_profil in production_profil %}
                                <tr>
                                    <td>{{ prod_profil.nom_projet }}</td>
                                    <td>{{ prod_profil.time_production }} heures</td>
                                    <td>{{ prod_profil.date_ajout}}</td>
                                    <td>{{ prod_profil.cout_total }} €</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!--<hr/>
                    <nav class="float-right">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;</span>
                            </li>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">1<span class="sr-only">(current)</span></span>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a></li>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">&raquo;</a>
                            </li>
                        </ul>
                    </nav>-->
                </div>
            </div>
        </div>
    </main>

{% endblock %}
