{% extends 'layout.html.twig' %}

{% block title %} Procost - Employés {% endblock %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Employés</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{path("panel_home")}}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Employés</li>
            </ul>
        </div>
        <div class="tile pb-5">
            {% if is_granted('ROLE_MANAGER') %}
            <a href="{{ path("employe_new")}}" class="btn btn-primary float-right mb-4" style="margin-left: 10px;"><i class="fa fa-plus-circle mr-2"></i>Ajouter un employé</a>
            {% endif %}
            <a href="{{ path("profil") }}" class="btn btn-info float-right mb-4"><i class="fa fa-user mr-2"></i>Voir mon profil</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Métier</th>
                        <th>Coût horaire</th>
                        <th>Date d'embauche</th>
                        {% if is_granted('ROLE_MANAGER') %}
                        <th></th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for all_employe in all_employes %}
                        <tr>
                            <td>{{ all_employe.nom }}</td>
                            <td>{{ all_employe.prenom }}</td>
                            <td>{{ all_employe.email }}</td>
                            <td>{{ all_employe.getMetier().libelle }}</td>
                            <td>{{ all_employe.couthoraire }}</td>
                            <td>{{ all_employe.dateembauche|date('d/m/Y')  }}</td>
                            {% if is_granted('ROLE_MANAGER') %}
                                <td>
                                    {% if all_employe.id != app.user.id %}
                                    <a href="" class="btn btn-info btn-sm">
                                        <i class="fa fa-eye mr-0"></i>
                                    </a>
                                    {% endif %}
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!--<hr/>
            <nav class="float-right">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">&laquo;</span>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">1<span class="sr-only">(current)</span></span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a></li>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>-->
        </div>
    </main>

{% endblock %}
