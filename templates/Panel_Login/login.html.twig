{% extends 'base.html.twig' %}

{% block title %}Procost - Login{% endblock %}

{% block body %}

    <section class="material-half-bg">
        <div class="cover"></div>
    </section>
    <section class="login-content">
        <div class="logo">
            <h1>Procost</h1>
        </div>
        {% if app.user %}
            <h3 class="login-head" style="margin-top: 50px;">Vous êtes connecté avec le compte : </h3> <h4>{{ app.user.email }}</h4><div class="btn-group btn-group-lg" role="group">
            <a class="btn btn-danger" href="{{ path('panel_logout') }}">Se déconnecter</a>
            <a class="btn btn-success" href="{{ path('panel_home') }}">Continuer sur le site</a>
        </div>
        {% else %}
        {% if error %}
            <div class="alert alert-dismissible alert-danger my-4">
                <button class="close" type="button" data-dismiss="alert">×</button><strong>Erreur email ou mot de passe ! Try again</strong>
            </div>
        {% endif %}
        <div class="login-box">
            <form class="login-form" method="post">
                <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Connexion</h3>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label class="control-label">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <br>
                <div class="form-group btn-container">
                    <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>CONNEXION</button>
                </div>
            </form>
        </div>
    </section>
     {% endif %}

{% endblock %}

