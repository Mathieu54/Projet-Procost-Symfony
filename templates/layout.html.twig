{% extends 'base.html.twig' %}

{% block body %}

        <!-- Navbar -->
        <header class="app-header"><a class="app-header__logo" href="#">Procost</a>
            <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
            <!-- Navbar Right Menu-->
            <ul class="app-nav">
                <li class="app-search">
                    <a href="{{ path("panel_logout") }}" class="btn btn-info">Se déconnecter</a>
                </li>
            </ul>
        </header>
        <!-- Sidebar menu-->

    <main class="app sidebar-mini">
        
        <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
        <aside class="app-sidebar">
            <div class="app-sidebar__user">
                <img class="app-sidebar__user-avatar" src="{% if(app.user.GetUrlImg is not null) %}{{ asset(app.user.GetUrlImg) }} {% else %} {{ asset(img/user-defaut.jpg) }}{% endif %}" alt="User Image">
                <div>
                    <p class="app-sidebar__user-name">{{ app.user.nom }} {{ app.user.prenom }}</p>
                    <p class="app-sidebar__user-designation">{{ app.user.Metier.libelle }}</p>
                </div>
            </div>
            <ul class="app-menu">
                <li>
                    <a  {% if menu_actif == "dashboard" %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href="{{ path("panel_home") }}">
                        <i class="app-menu__icon fa fa-dashboard"></i>
                        <span class="app-menu__label">Tableau de bord</span>
                    </a>
                </li>
                <li>
                    <a {% if menu_actif == "projets" %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href="{{ path('projet') }}">
                        <i class="app-menu__icon fa fa-laptop"></i>
                        <span class="app-menu__label">Projets</span>
                    </a>
                </li>
                <li>
                    <a {% if menu_actif == "employes" %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href="{{ path('employe') }}">
                        <i class="app-menu__icon fa fa-users"></i>
                        <span class="app-menu__label">Employés</span>
                    </a>
                </li>
                <li>
                    <a {% if menu_actif == "metiers" %} class="app-menu__item active" {% else %} class="app-menu__item" {% endif %} href="{{ path('metier') }}">
                        <i class="app-menu__icon fa fa-book"></i>
                        <span class="app-menu__label">Métiers</span>
                    </a>
                </li>
            </ul>
        </aside>

    {% block content %}

    {% endblock %}


    </main>

    <footer class="main-footer">
        &copy; 2020 - PROCOST
    </footer>

{% endblock %}
