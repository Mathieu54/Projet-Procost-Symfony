{% extends 'layout.html.twig' %}

{% block title %} Procost - Métiers {% endblock %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-book"></i>&nbsp;Métiers</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path("panel_home") }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Métiers</li>
            </ul>
        </div>
        <div class="tile pb-5">
            {% if is_granted('ROLE_MANAGER') %}
            <a href="{{path("metier_new")}}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un métier</a>
            {% endif %}
            <div class="table-responsive">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-dismissible alert-success my-4">
                        <button class="close" type="button" data-dismiss="alert">×</button><strong>{{message}}</strong>
                    </div>
                {% endfor %}
                <table class="table table-striped table-hover" style="text-align: center;">
                    <thead>
                    <tr>
                        <th colspan="2">Nom du métier</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for all_metier in all_metiers %}
                    <tr>
                        <td>{{ all_metier.libelle }}</td>
                        {% if is_granted('ROLE_MANAGER') %}
                        <td>
                            <a href="metier/edit/{{ all_metier.id }}" class="btn btn-warning btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                            </a>
                            <a href="metier/delete/{{ all_metier.id }}" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash mr-0"></i>
                            </a>
                        </td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
