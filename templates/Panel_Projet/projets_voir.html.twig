{% extends 'layout.html.twig' %}

{% block title %} Procost - Projet {{ projet.nom }} {% endblock %}

{% block content %}

    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Projet : {{ projet.nom }}</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path("panel_home") }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path("projet") }}">Projets</a>
                </li>
                <li class="breadcrumb-item">{{ projet.nom }}</li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="tile">
                    <table class="table table-striped table-bordered table-sm">
                        <tbody>
                        <tr>
                            <th>Nom du projet</td>
                            <td>{{ projet.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</td>
                            <td>{{ projet.description }}</td>
                        </tr>
                        <tr>
                            <th>Prix vente</td>
                            <td>{{ projet.prixvente }} €</td>
                        </tr>
                        <tr>
                            <th>Date de création</td>
                            <td>{{ projet.datecreation|date('Y/m/d') }}</td>
                        </tr>
                        {% if projet.datelivraison is not null %}
                        <tr>
                            <th>Date de livraison</td>
                            <td>{{ projet.datelivraison|date('Y/m/d') }}</td>
                        </tr>
                        {% endif %}
                        <tr>
                            <th>Coût total</td>
                            <td>Pas encore fait</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

{% endblock %}
