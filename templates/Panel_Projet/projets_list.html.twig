{% extends 'layout.html.twig' %}

{% block title %} Procost - Projets {% endblock %}

{% block content %}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-laptop"></i>&nbsp;Projets</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{path("panel_home")}}"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">Projets</li>
        </ul>
    </div>
    <div class="tile pb-5">
        {% if is_granted('ROLE_MANAGER') %}
        <a href="{{ path("projet_new") }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un projet</a>
        {% endif %}
        <div class="table-responsive">
            {% for message_projet in app.flashes('success-projet') %}
                <div class="alert alert-dismissible alert-success my-4">
                    <button class="close" type="button" data-dismiss="alert">×</button><strong>{{message_projet}}</strong>
                </div>
            {% endfor %}
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Projet</th>
                    <th>Description</th>
                    <th>Prix vente</th>
                    <th>Date création</th>
                    <th>Date livraison</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for all_projet in all_projets %}
                <tr>
                    <td>{{ all_projet.nom }}</td>
                    <td>{{ all_projet.description }}</td>
                    <td>{{ all_projet.getPrixVente }}</td>
                    <td>{{ all_projet.getDateCreation|date('d/m/Y') }}</td>
                    {% if all_projet.getDateLivraison is null %}
                    <td style="color:red;">Pas encore livré</td>
                        {% else %}
                            <td>{{ all_projet.getDateLivraison|date('d-m-Y') }}</td>
                        {% endif %}
                    <td>
                        {% if is_granted('ROLE_MANAGER') %}
                            {% if all_projet.getDateLivraison is null %}
                                <a href="projet/voir/{{ all_projet.id }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-eye mr-0"></i>
                                </a>
                                <a href="projet/edit/{{ all_projet.id }}" class="btn btn-warning btn-sm">
                                    <i class="fa fa-pencil mr-0"></i>
                                </a>
                                <a href="projet/end/{{ all_projet.id }}" class="btn btn-primary btn-sm">
                                    <i class="fa fa-calendar mr-0"></i>
                                </a>
                            {% else %}
                                <a href="projet/voir/{{ all_projet.id }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-eye mr-0"></i>
                                </a>
                            {% endif %}
                        {% else %}
                                <a href="projet/voir/{{ all_projet.id }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-eye mr-0"></i>
                                </a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
