{% extends 'layout.html.twig' %}

{% block title %} Procost - Ajouts Projets {% endblock %}

{% block content %}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Ajout d'un projet</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path("panel_home") }}"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path("projet") }}">Projets</a>
            </li>
            <li class="breadcrumb-item">Ajout d'un projet</li>
        </ul>
    </div>
    <div class="tile">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <section>
                <h3>Informations générales</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            <label class="control-label col-md-3">Nom du projet</label>
                            <div class="col-md-9">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-control-feedback text-danger">{{ form_errors(form.nom) }}</div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Description</label>
                            <div class="col-md-9">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-control-feedback text-danger">{{ form_errors(form.description) }}</div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Prix de vente</label>
                            <div class="col-md-9">
                                {{ form_widget(form.prix_vente, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-control-feedback text-danger">{{ form_errors(form.prix_vente) }}</div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-3">Date de création</label>
                            <div class="col-md-9">
                                {{ form_widget(form.date_creation, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-control-feedback text-danger">{{ form_errors(form.date_creation) }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <div class="row">
                <div class="btn-group btn-group-lg offset-md-6 col-md-6" role="group">
                    <a href="{{ path("projet") }}" class="btn btn-danger"><i class="fa fa-save"></i>Annuler</a>
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Enregistrer</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</main>

{% endblock %}
